<h1>Editing Section #<%= @section.id %></h1>

<%= form_tag(section_url(@section), method: 'patch') do %>
  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @section.name %>
  </div>

  <div>
    <%= label_tag :date %><br />
    <%= text_field_tag :date, @section.date %>
  </div>

  <div>
    <%= submit_tag "Update Section" %>
  </div>
<% end %>
