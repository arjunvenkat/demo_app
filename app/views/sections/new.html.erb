<h1>New Section</h1>

<%= form_tag(sections_url, method: 'post') do %>
  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :date %><br />
    <%= text_field_tag :date %>
  </div>

  <div>
    <%= submit_tag "Create Section" %>
  </div>
<% end %>
